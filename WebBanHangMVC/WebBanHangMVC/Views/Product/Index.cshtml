@model IEnumerable<WebBanHangMVC.Models.Product>

<h2 class="text-center text-primary my-4 display-3 fw-bold" style="font-family: 'Poppins', sans-serif; letter-spacing: 2px;">🎨 Danh Sách Sản Phẩm</h2>

<div class="container-fluid px-5">
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-4">
        @foreach (var product in Model)
        {
                <div class="col">
                    <div class="card h-100 border-0 rounded-4 overflow-hidden" style="background: linear-gradient(135deg, #ff7eb3, #ff758c); transform: rotate(-2deg); transition: transform 0.3s ease-in-out;">
                        <div class="card-body text-white text-center" style="font-family: 'Poppins', sans-serif;">
                            <h5 class="card-title text-uppercase fw-bold fs-4" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.2);">@product.Name</h5>
                            <p class="fs-5 fw-semibold">💰 @product.Price.ToString("C")</p>
                            <p class="fst-italic">"@product.Description"</p>
                            <p class="fw-light">🌿 Loại: @product.Category?.Name</p>
                            <td> 
                                    <img src="@product.ImageUrl" alt="Product Image" class="rounded-4 shadow-sm" style="max-width: 100%;border-radius: 20px; height: 100px; max-height: 300px" />
                            </td>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-center">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-light me-2" style="border-radius: 20px;">📄 Chi tiết</a>
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning me-2" style="border-radius: 20px;">✏️ Sửa</a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger" style="border-radius: 20px;">🗑️ Xóa</a>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
